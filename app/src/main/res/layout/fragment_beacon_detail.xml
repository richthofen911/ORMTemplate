<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_beacon_uuid"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="UUID: "/>

        <EditText
            android:id="@+id/et_beacon_uuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_beacon_major"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Major: "/>

        <EditText
            android:id="@+id/et_beacon_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_beacon_minor"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Minor: "/>

        <EditText
            android:id="@+id/et_beacon_minor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_beacon_url"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="URL: "/>

        <EditText
            android:id="@+id/et_beacon_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>



</LinearLayout>